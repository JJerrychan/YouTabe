<!doctype html>
<html lang="en">

<head>
    <title>Account Information</title>
    <meta charset="utf-8">
</head>

<body>
    <h2 class="heading-section">Account Information</h2>

    <p>{{user.account}}</p>
    <p>{{user.firstName}}</p>
    <p>{{user.lastName}}</p>
    <form action="/users" method="post">
        <input type="prepassword" placeholder="previous password" name="prepassword" id="prepassword" required>
        <input type="password" placeholder="new password" name="password" id="password" required>
        <input type="confirmPw" placeholder="confirm new password" name="confirmPw" id="confirmPw" required>
        <input type="firstName" placeholder="firstName" name="firstName" id="firstName">
        <input type="lastName" placeholder="lastName" name="lastName" id="lastName">
        <button type="submit">Submit</button>
    </form>


    <a href="/home" id = "home">Home</a>
</body>

</html>