<div class="coolbackground">
    <section class="mx-0 pt-5 text-center bg-dark bg-opacity-75">
        <div class="row">
            <div class="col-lg-6 col-md-2 mx-auto bg-white bg-opacity-50 rounded-3">
                <h1 class="text-primary">{{type}} Movies</h1>
                <p class="lead text-primary">found ? results</p>
                <p>selector would be here</p>
            </div>
        </div>
    </section>
    <div class="py-5 bg-dark bg-opacity-75">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {{#each movies}}
                    <a href="/movie/{{this._id}}" id="{{this.name}}">
                        <div class="col">
                            <div class="card shadow-sm card-zoom">
                                <img class="bd-placeholder-img card-img-top" width="100%" height="600"
                                     src="{{this.poster}}">
                                <div class="card-body">
                                    <p class="card-text text-center fs-5 fw-bold">{{this.name}}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>